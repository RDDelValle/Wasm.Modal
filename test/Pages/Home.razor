@page "/"

<PageTitle>Home</PageTitle>

<h1>Wasm Modal</h1>

<button @onclick="Create1">
    Create Modal 1
</button>
<button @onclick="Create2">
    Create Modal 2
</button>
<button @onclick="Create3">
    Create Modal 3
</button>

@inject IModalManager ModalManager
@code {

    private async Task Create1()
    {
        await ModalManager.CreateModalAsync<TestContent1>("TestContent1", hasStaticBackdrop: false, hideCloseButton:true);
    }
    
    private async Task Create2()
    {
        await ModalManager.CreateModalAsync<TestContent2>("TestContent2", hasStaticBackdrop: true);
    }
    
    private async Task Create3()
    {
        await ModalManager.CreateModalAsync<TestContent3>("TestContent3", hasStaticBackdrop: true, hideCloseButton: true);
    }

}
